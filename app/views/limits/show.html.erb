<p id="notice"><%= notice %></p>

  <h1>
	Your Limit:
	</h1>
<p>
  <strong>Expiredate:</strong>
  <%= @limit.expireDate %>
</p>

<p>
  <strong>Limit:</strong>
  <%= @limit.limit %>
</p>

        <%= link_to 'Edit', edit_limit_expense_path(@limit) %> |
        <%= link_to 'Destroy', @limit, method: :delete, data: { confirm: 'Are you sure?' } %>
		
	
<p>
  <h2>
	Expenses:
	</h2>
</p>	
		
<%= link_to 'New Expense', new_limit_expense_path(@limit) %>
<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Description</th>
      <th>Date</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.store %></td>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= expense.value %></td>
        <td><%= link_to 'Show', limit_expense_path(@limit) %></td>
        <td><%= link_to 'Edit', edit_limit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', limit_expense_path(@limit), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
