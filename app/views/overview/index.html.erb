
<h1>Overview</h1>


<p>
  <strong>Expenses this month:</strong>
  <%= @overview %>
  
</p>

<p>
<h2>Current Limits:</h1>
<table>
  <thead>
    <tr>
      <th>Expiredate</th>
      <th>Limit</th>
      <th>Expenses</th>
      <th>Left</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @limits.each do |limit| %>
      <tr>
        <td><%= limit.expireDate %></td>
        <td><%= limit.limit %></td>
        <td><%= @expenses.where("date > ? AND date < ?", limit.created_at,limit.expireDate).sum(:value)%></td>
        <td><%= limit.limit - @expenses.where("date > ? AND date < ?", limit.created_at,limit.expireDate).sum(:value)%></td>
        <td><%= link_to 'Show', limit_expenses_path(limit) %></td>
        <td><%= link_to 'Edit', edit_limit_path(limit) %></td>
        <td><%= link_to 'Destroy', limit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</p>

<h3>
<%= link_to 'Manage your Limts and Expenses', limits_path, id: 'showLimits'  %>

</h3>

<p>
