<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<%= link_to 'New Expense', new_expense_path %>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Description</th>
      <th>Date</th>
      <th>Value</th>
      <th>Log</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.store %></td>
        <td><%= expense.description %></td>
        <td><%= expense.date %></td>
        <td><%= expense.value %></td>
        <td><%= form_tag log_path(expense) , method: :get do | form |%>
            <%= button_tag "Reset value", id: "button-#{expense.id}"%>
            <% end %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>
<h3>
<%= link_to 'Get an overview', overview_index_path %>
</h3>
</p>
